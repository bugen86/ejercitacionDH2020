<!DOCTYPE html>
<html lang="es">
	<head>
		<!-- Include con ejs de todo el codigo en comun del head -->
		<%- include('./partials/head.ejs') %>
		<link rel="stylesheet" href="/stylesheets/product.css" />
		<title>Productos | BeerStore</title>
	</head>

	<body>
		<!-- Include del header.ejs -->
		<%- include('./partials/header.ejs') %>
		<main class="contain">
			<div class="banner-products"></div>
			<h2 style="text-align: center; margin-top: 20px;">Lista de Producto en Venta</h2>
			<div class="productos">
				<% for( let i = 0; i < archivoProductos.length; i++ ) { %>

				<div class="producto" id="producto<%= i %>">
					<div class="cont-img-producto">
						<img src="<%= archivoProductos[i].img %>" alt="" />
					</div>
					<div class="producto-descripcion">
						<h2><%= archivoProductos[i].nombre %></h2>
						<p>
							<%= archivoProductos[i].resenia %>
						</p>
						<div style="margin-top: 50px;">
							<a href="/productos/detalle/<%= archivoProductos[i].id %> " class="btn btn-primary"
								>Ver Detalle</a
							>
							<a href="/carrito/<%= archivoProductos[i].id  %> " class="btn btn-success"
								><i class="fas fa-shopping-cart"></i
							></a>
						</div>
					</div>
				</div>

				<% } %>
			</div>
		</main>
		<!-- Include del footer.ejs -->
		<%- include('./partials/footer.ejs') %> <%- include('./partials/jsIncludes.ejs') %>
	</body>
</html>
