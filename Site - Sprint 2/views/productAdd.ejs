<!DOCTYPE html>
<html lang="es">
	<head>
		<!-- Include con ejs de todo el codigo en comun del head -->
		<%- include('./partials/head.ejs') %>
		<link rel="stylesheet" href="/stylesheets/productAdd.css" />
		<title>Agregar Producto | BeerStore</title>
	</head>

	<body>
		<!-- Include del header.ejs -->
		<%- include('./partials/header.ejs') %>
		<main class="container">
			<h2 id="titulo-carga-producto">Carga de Producto</h2>
			<form action="/productos/agregar/confirmado" method="GET">
				<div class="form-row">
					<div class="form-group col-md-4">
						<label for="nombrePorducto">Nombre del Producto</label>
						<input
							type="text"
							id="nombrePorducto"
							name="nombre"
							class="form-control"
							placeholder="Cerveza Negra..."
							required
						/>
					</div>
					<div class="form-group col-md-4">
						<label for="presProducto">Presentación</label>
						<input
							type="text"
							id="presProducto"
							name="presentacion"
							class="form-control"
							placeholder="lata - botella..."
						/>
					</div>
					<div class="form-group col-md-4">
						<label for="origenProsucto">Origen</label>
						<input
							type="text"
							id="origenProsucto"
							name="origen"
							class="form-control"
							placeholder="Alemania..."
						/>
					</div>
				</div>

				<div class="form-row">
					<div class="form-group col-md-4 col-4">
						<label for="gradAlProducto">% Alcohol</label>
						<input
							type="number"
							id="gradAlProducto"
							class="form-control"
							name="alcohol"
							required
							placeholder="4.1"
						/>
					</div>
					<div class="form-group col-md-4 col-4">
						<label for="ibu">IBU</label>
						<input type="number" id="ibu" class="form-control" name="ibu" required placeholder="8.1" />
					</div>
					<div class="form-group col-md-4 col-4">
						<label for="medida">Medida</label>
						<input
							type="number"
							id="medida"
							class="form-control"
							name="medida"
							required
							placeholder="500ml - 1L"
						/>
					</div>
				</div>
				<!-- <div id="imgAdd">
					<img src="" alt="" />
				</div> -->
				<div class="form-row">
					<div class="input-group col-md-12">
						<label class="mr-auto" for="inputFile">Agregar Imagen</label>
						<div class="custom-file">
							<input type="file" class="custom-file-input" id="inputFile" name="img" required />
							<label id="lblInputFile" class="custom-file-label" for="inputFile">Choose file</label>
						</div>
					</div>
				</div>
				<div class="form-row">
					<div class="form-group col-md-12">
						<label for="resenia">Reseña</label
						><textarea name="resenia" id="resProducto" class="form-control" rows="10"></textarea>
					</div>
				</div>
				<div class="form-row">
					<div class="form-group col-md-6">
						<input class="btn btn-primary" type="submit" value="Cargar" />
					</div>
				</div>
			</form>
		</main>
		<!-- Include del footer.ejs -->
		<%- include('./partials/footer.ejs') %> <%- include('./partials/jsIncludes.ejs') %>

		<!-- <script>
			let file = document.getElementById("inputFile")
			file.addEventListener("change", () => {
				document.getElementById("lblInputFile").innerHTML = file.file
			})
		</script> -->
	</body>
</html>
